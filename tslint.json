{
  "extends": ["tslint-config-airbnb", "tslint-eslint-rules", "tslint:latest"],
  "rules": {
    "max-line-length": {
      "options": [80]
    },
    "ter-indent": [
      true,
      4,
      {
        "CallExpression": {
          "arguments": 1
        }
      }
    ],
    "prefer-template": true,
    "indent": [true, "spaces"],
    "no-boolean-literal-compare": false
  },
  "jsRules": {
    "max-line-length": {
      "options": [80]
    },
    "ter-indent": [
      true,
      4,
      {
        "CallExpression": {
          "arguments": 1
        }
      }
    ],
    "prefer-template": true,
    "indent": [true, "spaces"]
  }
}
