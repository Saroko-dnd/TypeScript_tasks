{
    "extends": ["tslint-config-airbnb", "tslint:latest"],
    "rules": {
        "max-line-length": {
            "options": [80]
        },
        "ter-indent": [
            true,
            4,
            {
                "CallExpression": {
                    "arguments": 1
                }
            }
        ],
        "quotemark": [true, "single"],
        "no-console": [false],
        "ter-arrow-parens": [true, "always"],
        "prefer-template": true,
        "indent": [true, "spaces"],
        "no-boolean-literal-compare": false
    },
    "jsRules": {}
}
